<article>
  <section class="filters">
    <form id="searchForm" role="form" action="/;jsessionid=61B10B6F9C08053BE8BC9B7447D2DFD5" method="post">
      <ul>
        <li>
          <label for="Buildings">
            <div class="custom">
            {{view "select"
              content=buildings
              optionValuePath="content.id"
              optionLabelPath="content.name"
              selection=selectedBuilding
              prompt="Any building"}}
            </div>
          </label>
        </li>
        <li class="hidden">
          <label for="DateTime">
            <input id="DateTime" type="datetime-local">
          </label>
        </li>
        <li>
          <label for="Attendees">
            <span class="icon-person"></span>
            {{input type="number" placeholder="# of people" value=seating}}
          </label>
        </li>
        <li class="hidden">
          {{input type="checkbox" name="5" viewName="5" checked=seating5}}
          <label {{bind-attr for="view.5.elementId"}}>5 <span class="icon-person"></span></label>
          {{input type="checkbox" name="10" viewName="10" checked=seating10}}
          <label {{bind-attr for="view.10.elementId"}}>10 <span class="icon-person"></span></label>
          {{input type="checkbox" name="15" viewName="15" checked=seating15}}
          <label {{bind-attr for="view.15.elementId"}}>15 <span class="icon-person"></span></label>
        </li>
        <li>
          {{input type="checkbox" name="display" checked=display viewName="display"}}
          <label {{bind-attr for="view.display.elementId"}}><span class="icon-projector"></span> Display</label>
        </li>
        <li>
          {{input type="checkbox" name="phone" checked=phone viewName="phone"}}
          <label {{bind-attr for="view.phone.elementId"}}><span class="icon-phone"></span>Conference Phone</label>
        </li>
        <li class="hidden">
          <label for="Search">
            <input type="submit" id="Search" value="Search" class="button" />
          </label>
        </li>
      </ul>
    </form>
    <div class="feedback">
      <ul>
        <li><em>Phase 2 will integrate with outlook to book a room</em></li>
        <li><a href="mailto:chris.geyer@raleighnc.gov?Subject=Conference Room App Feedback">Send us feedback about this app</a></li>
        <li><br/></li>
        <li><a href="mailto:will.refvem@raleighnc.gov?Subject=Conference Room Data Feedback">Tell us about wrong room information</a></li>
      </ul>
    </div>
  </section>
  <section class="results">
    <h2>{{filteredRooms.length}} Rooms available</h2>
    {{#each building in packagedRooms}}
    <h4>{{building.name}}</h4>
    <ul>
      {{#each room in building.rooms}}
        <li>
          <h3>{{room.roomType}} {{room.roomNumber}}</h3>
          {{#if room.display}}
            <span class="icon-projector"></span>
          {{/if}}
          {{#if room.phone}}
            <span class="icon-phone"></span>
          {{/if}}
          {{room.seating}} <span class="icon-person"></span>
          {{#if room.hasUsageRestrictions}}
            <br/>
            <span class="icon-warning"></span> {{room.usageRestrictions}} - contact {{room.manager}}
          {{/if}}
          <br/>
          <em>{{room.network}}</em>
        </li>
      {{/each}}
    </ul>
    {{/each}}
  </section>
</article>